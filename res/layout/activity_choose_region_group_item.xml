        android:layout_marginTop="3dp"
        android:text="title"
        android:textColor="#11a5ff"
        android:textSize="16sp" />
    <!-- #7a7a7a -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_contacts_sub" />

</RelativeLayout>