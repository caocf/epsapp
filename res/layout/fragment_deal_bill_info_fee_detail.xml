<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/common_bg_rect_gray"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_date"
                style="@style/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="订货时间：2014-10-19 9:24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/black_board_goods" />

                <TextView
                    android:id="@+id/tv_addr"
                    style="@style/detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/iv_icon"
                    android:layout_toRightOf="@id/iv_icon"
                    android:gravity="center_vertical"
                    android:text="8:77"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_info"
                style="@style/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="false"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            style="@style/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/common_bg_rect_gray"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_dp_name1"
                style="@style/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="订货方："
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA" />

        </LinearLayout>

        <LinearLayout
            style="@style/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/common_bg_rect_gray"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_dp_name2"
                style="@style/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="发布方："
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_pay_info_amount"
                    style="@style/detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="应收信息费:" />

                <EditText
                    android:id="@+id/et_pay_info_amount"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/common_bg_edit"
                    android:numeric="integer"
                    android:text=""
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bt_update_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/common_btn_bg_green_normal"
                    android:text="修改" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="支付" />

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="取消" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_g_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_confirm_goods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="确认已拉货" />

            <Button
                android:id="@+id/bt_g_appeal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="申诉" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_g_drawback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_agree"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="同意" />

            <Button
                android:id="@+id/bt_not_agree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="不同意" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_v_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_confirm_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="确认付款" />

            <Button
                android:id="@+id/bt_v_appeal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="申诉" />

            <Button
                android:id="@+id/bt_drawback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg_green_normal"
                android:text="申请退款" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>