<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contacts_name"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_content_transparent"
        android:padding="10dp" >

        <com.epeisong.base.view.FlowTextLayout
            android:id="@+id/flow_cur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_shape_21a1fa_tr_br"
            android:text="添加"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_add"
            android:background="@drawable/shape_content_white_lt_lb"
            android:hint="请输入标签"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="其他标签"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_content_transparent"
        android:orientation="vertical"
        android:padding="10dp" >

        <com.epeisong.base.view.FlowTextLayout
            android:id="@+id/flow_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp" />
    </LinearLayout>

</LinearLayout>