<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.epeisong.ui.view.RecordChatView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
    </com.epeisong.ui.view.RecordChatView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/rcv"
        android:background="@color/line_6c" />

    <lib.pulltorefresh.PullToRefreshListView
        android:id="@+id/lv_msgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:listSelector="@color/transparent"
        android:transcriptMode="normal"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextColor="@android:color/darker_gray"
        ptr:ptrMode="both" >
    </lib.pulltorefresh.PullToRefreshListView>

    <TextView
        android:id="@+id/tv_audio_mode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/lv_msgs"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_content_gray"
        android:gravity="center"
        android:text="mode"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>