<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_title_height" >

    <RelativeLayout
        android:id="@+id/home_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/custom_title_item_width"
        android:background="@drawable/selector_custom_title_item"
        android:clickable="true"
        android:minWidth="@dimen/custom_title_item_width"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/base_title_back" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/custom_title_item_height"
            android:layout_height="@dimen/custom_title_item_height"
            android:layout_toRightOf="@id/home_btn"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/actions_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/custom_title_item_height"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@id/actions_ll"
        android:layout_toRightOf="@id/home_rl"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingRight="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_title_container"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/title_tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- <View -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="1dp" -->
    <!-- android:layout_alignParentBottom="true" -->
    <!-- android:background="@android:color/darker_gray" /> -->

</RelativeLayout>