<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingLeft="5dp"
            android:paddingTop="25dp"
            android:text="您正在使用短信验证，请填写效验码："
            android:textColor="#878787"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#919191" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/security_center_changepassword_mimabeijing"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_new_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/security_center_changepassword_mimabeijing"
                    android:inputType="textPassword" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_xiaoyanma"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="40dp"
                    android:text="效验码"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_xiaoyanma"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="33dp"
                    android:layout_toRightOf="@+id/tv_xiaoyanma"
                    android:background="@drawable/security_center_changepassword_mimabeijing"
                    android:inputType="number"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/iv_click"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@+id/et_xiaoyanma"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/et_xiaoyanma"
                    android:background="@drawable/security_center_changepassword_huoqu"
                    android:text="点击免费获取"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#919191" />

        <Button
            android:id="@+id/bt_queding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/security_center_changepassword_queding"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

</ScrollView>